{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016" /* JavaScript version to output */,
    "module": "commonjs" /* Node.js module system */,
    "esModuleInterop": true /* Allow default imports from CommonJS */,
    "strict": true /* Enable all strict type-checking options */,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true /* Skip type-checking of all declaration files */,

    /* Project Structure */
    "rootDir": "src" /* Source files location */,
    "outDir": "dist" /* Compiled JS files location */,

    /* Optional */
    "resolveJsonModule": true /* Allows importing JSON files */,
    "noEmitOnError": true /* Donâ€™t emit JS if there are TypeScript errors */
  },
  "include": ["src/**/*.ts"] /* Include all TS files inside src */,
  "exclude": ["node_modules"] /* Exclude node_modules */
}
